@model IEnumerable<string>
@{
    ViewData["Title"] = "Image Show";
}


<h1 class="display-4">Resimler</h1>
@foreach (var item in Model)
{
    <div>
       @* <img src="~/Images/@item" style="width:100px;height:100px;float:left;border:1px solid red;" />*@
        <img src="~/Images/@item" style="width:100px;height:100px;border:1px solid red;" />
